<div class="span-22 prepend-1 append-1">
  <h2>Select Existing Evaluation</h2>
  <div class="allEvaluationsArea span-22">
    <% counter = 0 %>
    <% @evaluations.each do |evaluation| %>
      <% if(counter == 0) %>
        <%= link_to evaluation.name, evaluationinfo_path(:id => evaluation.id), {:class => 'span-7 mybutton-half myorange'} %></br>
      <% elsif(counter == 1) %>
        <%= link_to evaluation.name, evaluationinfo_path(:id => evaluation.id), {:class => 'span-7 mybutton-half myblue prepend-half'} %></br>
      <% else %>
        <%= link_to evaluation.name, evaluationinfo_path(:id => evaluation.id), {:class => 'span-7 mybutton-half mygreen last prepend-half'} %></br>
        <% counter = -1 %>
        <div class="span-22"></div>
      <% end %>
      <% counter = counter + 1 %>
    <% end %>
  </div>

  <div class="divider span-22">
  </div>

  <div class="submitArea span-22">
    <h2>Create New Evaluation</h2>
  <%= form_for(@evaluation) do |f| %>
    <%= render 'shared/error_messages'%>
    <div class="field">
      <h2 class="submitLabel">Evaluation Name:</h2>
      <%= f.text_field :name, :class => "span-10 submitBox" %>
    </div>
    <div class="actions span-5 last">
      <%= f.submit "Create Evaluation", {:id => "submit-form", :class => "mygreen-hover"} %>
    </div>
  <% end %>
  </div>
</div>
